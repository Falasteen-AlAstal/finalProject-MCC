<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="مرحبا !! قم بالتسجيل الآن"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/First_Name"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint="الاسم الأول"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp" />



        <EditText
            android:id="@+id/middle_name"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint=" الاسم الأوسط"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint=" اسم العائلة"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/date_birth"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint="تاريخ الميلاد"
            android:inputType="date"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edit_Text_Address"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint="العنوان"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText_Email"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint=" البريد الإلكتروني"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText_Phone"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint="  رقم الهاتف "
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText_Password"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint="  كلمة المرور"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/confirmation_Password"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back"
            android:ems="10"
            android:hint="تأكيد كلمة المرور"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/but_Register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#2196F3"
            android:padding="17dp"
            android:text="تسجيل" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="هل لديك حساب؟"
                android:textColor="#878787"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_Login"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text="قم بتسجيل الدخول"
                android:textColor="#2196F3"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
